{
  "name": "alizharb/laravel-hooks",
  "description": "A universal extensibility and plugin system for Laravel 12 applications.",
  "keywords": [
    "laravel",
    "hooks",
    "actions",
    "filters",
    "plugin",
    "events",
    "wordpress-style"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Ali Harb",
      "email": "harbzali@gmail.com",
      "homepage": "https://github.com/AlizHarb"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/support": "^12.0",
    "illuminate/pipeline": "^12.0",
    "illuminate/view": "^12.0",
    "illuminate/console": "^12.0",
    "illuminate/container": "^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^9.5|^10.0",
    "pestphp/pest": "*",
    "pestphp/pest-plugin-laravel": "*",
    "phpstan/phpstan": "*",
    "larastan/larastan": "^3.9",
    "laravel/pint": "^1.24",
    "friendsofphp/php-cs-fixer": "*",
    "livewire/livewire": "^4.0",
    "barryvdh/laravel-debugbar": "^3.14",
    "laravel/pulse": "^1.2",
    "filament/filament": "^4.0|^5.0"
  },
  "suggest": {
    "alizharb/laravel-modular": "Enables theme discovery within modular structures and provides zero-config autoloading for modules.",
    "alizharb/laravel-modular-livewire": "Provides automatic Livewire component discovery and registration within modules.",
    "alizharb/laravel-modular-filament": "Enables Filament v5 admin panel integration with automatic discovery in modules.",
    "alizharb/laravel-themer": "For advanced theme management support"
  },
  "autoload": {
    "psr-4": {
      "AlizHarb\\LaravelHooks\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AlizHarb\\LaravelHooks\\HookServiceProvider"
      ],
      "aliases": {
        "Hook": "AlizHarb\\LaravelHooks\\Facades\\Hook"
      }
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
